#!/usr/bin/env ruby
require 'optparse'
require 'io/console'
require_relative '../lib/clortho'

begin
  ssh_setup = Clortho::SSHSetup.new
  initials = ARGV[0]

  parser = OptionParser.new do |opts|
    opts.banner = ssh_setup.usage_msg

    opts.on('-h', '--help', 'Shows help') do |v|
      puts parser
      exit 0
    end
    opts.on('-v', '--version', 'Returns version') do |v|
      puts Clortho::VERSION
      exit 0
    end
    opts.on('--add-to-github', 'Adds a GitHub key') do |v|
      # prompt for GitHub username/password
      print "Enter your username: "
      username = gets.chomp
      print "Enter your password: "
      password = STDIN.noecho(&:gets).chomp
      puts
      uploader = Clortho::GitHubKeyUploader.new(initials, username, password)
      # prompt for key title
      print "Enter title for key: "
      title = gets.chomp
      uploader.upload title
      exit 0
    end
  end

  parser.parse!
  ssh_setup.login(initials)
rescue OptionParser::InvalidOption => e
  puts parser
  exit 1
rescue => e
  puts e.message
  puts parser
  exit (e.is_a? Clortho::SSHSetup::UserNotFoundError) ? 2 : 1
end

puts "Key will expire at #{ssh_setup.key_expiry}"